<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>RockStarAlley::<%= Hood.find_by_id(@state.hood_id).name %></title>
  <%= javascript_include_tag :defaults %>
<%= stylesheet_link_tag '/stylesheets/application.css', :media => 'all' %>
</head>

	  <body>
<%= image_tag("http://kristeraxel.com/art/rockstaralley2_99.jpg", :border=>0) %>
    <div>
	  <font color="#008888"><%= @thisguy.name -%></font>
	  <% if @location.id ==1 then %>
	    just arrived in <b><%= Hood.find_by_id(@state.hood_id).name -%>.</b>
	  <% else %>
	    is kicking it in <b><%= Hood.find_by_id(@state.hood_id).name -%></b> at <b><%= @location.display_name -%></b>.<br>
	    <%= @location.description -%>
	  <% end -%>
	</div>
</td></tr>
</table><table align="center"><tr><td width=410>
<div id="flashmessage" style="color: red;" align="center"><%= flash[:notice] -%></div></td></tr></table>
<%= yield  %>
<table border=1 align="center">
<tr><td colspan=99><font color="#008888"><%= @thisguy.name -%></font> info</td></tr>
<tr>
<td width=160><div id="stats"><%= render(:partial => "stats") -%></div></td>
<td rowspan=99 width=260>
	<div style="display: inline;">
	<% if @thisguy.has_guitar > 0 then -%>
		<%= image_tag("http://www.kristeraxel.com/art/0guitar.png", :border=>0, :title => "your guitar") -%>
		</div><div style="display: inline;">
	<% end -%>	
	<% if @thisguy.has_box > 0 then -%>
		<%= image_tag("http://www.kristeraxel.com/art/0acapulco.gif", :border=>0, :title => "your shanty") -%>
		</div><div style="display: inline;">
	<% end -%>	
	<% if @thisguy.has_car > 0 then -%>
	  <%= image_tag("http://www.kristeraxel.com/art/0car.png", :border=>0, :title => "your wheels") -%>
	  </div><div style="display: inline;">
	<% end -%>
	<% if @thisguy.has_pet > 0 then -%>
	  <% for num in (1..@thisguy.has_pet) %>
	    <%= image_tag("http://www.kristeraxel.com/art/0puppie.gif", :border=>0, :title => "your pooch") -%>
	  <% end %>
	  </div><div style="display: inline;">
	<% end -%>
	<% if @thisguy.has_uniform > 0 then -%>
	  <%= image_tag("http://www.kristeraxel.com/art/0uniform.gif", :border=>0, :title => "your uniform") -%>
	  </div><div style="display: inline;">
	<% end -%>
	<% if @thisguy.has_job > 0 then -%>
	  <%= image_tag("http://www.kristeraxel.com/art/0job.png", :border=>0, :title => "you have a job working at #{@thisguy.name_of_job}") -%>
	  </div><div style="display: inline;">
	<% end -%>
	<% if @thisguy.charity_bar > 0 then -%>
	  <% for num in (1..@thisguy.charity_bar) %>
	    <%= image_tag("http://www.kristeraxel.com/art/0candybar.png", :border=>0, :title => "candy bars for country stars") -%>
	  <% end %>
	  </div><div style="display: inline;">
	<% end -%>
	<% if @thisguy.has_acct > 0 then -%>
	  <%= image_tag("http://www.kristeraxel.com/art/0lockbox.gif", :border=>0, :title => "your savings account") -%>
	  </div><div style="display: inline;">
	<% end -%><br></div><br>
	<div id="enthuse"><%= render(:partial => "enthuse") -%></div>
</td></tr></table>
<%= render(:partial => "layouts/footer")%>

</body>
</html>


