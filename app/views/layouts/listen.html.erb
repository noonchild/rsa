<html>
<head>
	  <title><%=@page_title%>::<%= controller.controller_name %></title>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'streamlined' %>
  <%= javascript_include_tag '/windows_js/javascripts/window' %>
  <%= javascript_include_tag '/overlib/overlib' %>
  <%= javascript_include_tag 'tabber' %>
  <%= javascript_include_tag 'tabber-minimized' %>
  <%= stylesheet_link_tag '/windows_js/themes/mac_os_x' %>
  <%= stylesheet_link_tag '/windows_js/themes/default' %>
  <%= stylesheet_link_tag 'as_style' %>
  <%= stylesheet_link_tag 'streamlined' %>
  <%= stylesheet_link_tag 'menu' %>
  <%= stylesheet_link_tag 'tabber' %>

<!--[if IE 6]> 
  <link href="/stylesheets/ie6.css" media="screen" rel="stylesheet" type="text/css" />
<![endif]-->
</head>
<body>
  <div id="wrapper">
	<div id="header">
		<h1 id="branding"><%= streamlined_branding %> <span id ="busy_bee" class="busy_bee"><%= image_tag('/images/streamlined/loading.gif', :border => 0) %></span> </h1>
	  	<div id="top_nav">
	  	<%= render(:partial => 'shared/streamlined/top_menu') %></div>
	</div>
	 <div id="left">
	   <%= render(:partial => "shared/streamlined/side_menu")%>
	 </div>
	 <%= controller::controller_name %>
	 <div id="center">
	   <% if flash[:notice] %><div id="notice" ><%= flash[:notice] %> <%= link_to_function( image_tag('/images/icon/arrow_up.png', :border => 0, :alt => 'close this message', :title => 'close this message'), "Effect.Fade('notice', {duration:1});" ) -%></div><% end %>
	   <% if add_bulletin? %><div id="bulletin_div"><%= render(:partial => "shared/bulletin")%></div><% end %>
	   <div id="content_for_layout">
		 <%= @content_for_layout %>
	   </div>
	 </div>
	<div id="footer">
	  <%= streamlined_footer %>
	</div>
  </div>
	<SCRIPT LANGUAGE= "JavaScript">
	 if ($('busy_bee')) {
		$('busy_bee').style.display = 'none';
	}
	 //setScreenWidth();
	</SCRIPT>
</body>
</html>