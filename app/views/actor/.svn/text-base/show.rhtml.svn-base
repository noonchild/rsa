<% for column in Actor.content_columns %>
<p>
  <b><%= column.human_name %>:</b> <%=h @actor.send(column.name) %>
</p>
<% end %>

<% if @state == nil %>
<% form_tag :controller => 'game', :action => 'create' do %>
  <%= submit_tag "Play Game" %>
  <% end %>
<% end %>

<%= link_to 'Edit', :action => 'edit', :id => @actor %> |
<%= link_to 'Back', :action => 'list' %>
