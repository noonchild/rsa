<% form_for([@album]) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name, :size => 24 %>  <%= f.text_field :release_year, :size => 6 %>
  </p>
  <p>
    <b>note</b><br />
    <%= f.text_area :note, :rows => 2 %>
  </p>
  <p>
    <b>graf path</b><br />
    <%= f.text_field :gpath, :size => 30 %>
  </p>
  <p>
    <b>store path</b><br />
    <%= f.text_field :spath, :size => 30 %>
  </p>
  <p>
    <b>dpath</b><br />
    <%= f.text_field :dpath, :size => 30 %>
  </p>
  <p>
    <%= f.submit button_name %>
  </p>
<% end %>