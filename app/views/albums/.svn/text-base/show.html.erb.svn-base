<b>Name</b>: <%= @album.name %> <%= @album.release_year %>

<%= link_to_function(image_tag('/images/icon/arrow_down.png', :alt => 'see info', :title => 'see info', :border => 0), "toggleAlbumInfo();") -%>
<div id="album_info" style="display: none;">
	<table>
  <tr><td><b>dpath</b>: <%= @album.dpath %></td></tr>
  <tr><td><b>note</b>: <%= @album.note %></td></tr>
  <tr><td><b>gpath</b>: <%= @album.gpath %></td></tr>
  <tr><td><b>spath</b>: <%= @album.spath %></td></tr>
    </table>
</div>
<%= render :partial => "songs_by_album", :locals => {:album_id => @album.id}%>
<br><%= link_to 'Edit', [:edit, @album] %> | <%= link_to 'Back', albums_path %>