<% form_for([@song]) do |f| %>
  <p>
    <b>song Name</b><br />
    <%= f.text_field :name, :size => 30 %> <%= f.text_field :release_year, :size => 6 %>
  </p>
  <p>
    <b>dname</b><br />
    <%= f.text_field :dname, :size => 20 %><br /><br />
    <b>filename</b><br /><%= f.text_field :filename, :size => 30 %>

  </p>
  <p>
    <b>note</b><br />
    <%= f.text_area :note, :rows => 3 %>
  </p>
  <p>
    <b>lyrics</b><br />
    <%= f.text_area :lyrics, :rows => 4 %>
  </p>

  <p>
    <%= f.submit button_name %>
  </p>
<% end %>