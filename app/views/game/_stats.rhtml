<table>
	<tr height=20><td colspan=2>
	<%= link_to image_tag("http://www.kristeraxel.com/art/0pda.png", :border=>0), :controller => 'actor', :action => 'change', :id => @thisguy %>
	<% if @thisguy.burgers > 3 then%>
	  <% burger_limit = 3 %>
	<% else%>
	  <% burger_limit = @thisguy.burgers %>
	<% end %>
	<% for b in 1..burger_limit %>
	  <div id="burger<%=b%>" style="display: inline;"><span><%= link_to_remote( image_tag("http://www.kristeraxel.com/art/0burger.png", :border=>0),
	                         :url =>{ :action => :reset_enthusiasm },
	 						 :update => { :success => 'enthusiasm' },
	                         :success => {visual_effect(:highlight,"enthusiasm"),  
		                                  visual_effect(:DropOut,"burger#{b}")},
							 :failure => {visual_effect(:highlight,"burger#{b}"),"alert('NO BURGER FOR YOU. You are not hungry right now.')"}
	) %></span></div>
	<% end %></td></tr>
	<tr><td align="right" width=69>looks:</td>
    <td><div id="looks"> <%= number_with_precision(@thisguy.looks) -%></div></td></tr>
    <tr><td align="right">skill:</td>
	<td><div id="skill"> <%= number_with_precision(@thisguy.skill) -%></div></td></tr>
    <tr><td align="right">charisma:</td>
    <td><div id="charisma"> <%= number_with_precision(@thisguy.charisma) -%></div></td></tr>
	<tr><td align="right">savvy:</td>
	<td><div id="savvy"> <%= number_with_precision(@thisguy.savvy) -%></div></td></tr>
</table>