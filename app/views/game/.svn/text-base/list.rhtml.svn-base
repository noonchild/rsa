<h1>Listing Games</h1>

<table>
  <tr>
  <% for column in State.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for s in @states %>
  <tr>
  <% for column in State.content_columns %>
    <td><%=h s.send(column.name) %></td>
  <% end %>
  <br>
  <td><%= link_to 'Destroy', { :action => 'destroy', :id => s }, :confirm => 'Are you sure?', :method => :post %><hr></td><br>
<td><%= link_to 'Move', { :action => 'move' }, :method => :post %></td>
  </td>
  </tr>
<% end %>
</table>

<br />
